<!DOCTYPE html>
<html lang="ja">
<head>
  <%- include('../_share/metadata.ejs') %>
  <title>tastylog</title>
  <%- include('../_share/stylesheets.ejs') %>
</head>

<body>
  <div class="outerframe">
    <%- include('../_share/navbar.ejs') %>
    <main role="main" class="container">
      <div class="border-bottom my-5">
        <h1>ログイン</h1>
      </div>
      <div class="row justify-content-center">
        <form action="/account/login" method="POST" class="col-sm-10 col-lg-8">
          <div class="form-group row">
            <label for="userName" class="col-sm-3 col-form-label">ユーザー名</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="userName" name="userName" />
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-3 col-form-label">パスワード</label>
            <div class="col-sm-9">
              <input type="password" class="form-control" id="password" name="password" />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
              <input type="submit" class="btn btn-primary" value="ログイン" />
            </div>
          </div>
          <% if (message && message.length !== 0) { %>
            <div class="alert alert-danger"><%= message %></div>
          <% } %>
        </form>
      </div>
    </main>
    <%- include('../_share/footer.ejs')  %>
  </div>
  <%- include('../_share/javascripts.ejs') %>
</body>
</html>
